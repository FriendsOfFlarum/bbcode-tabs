{
  "name": "fof/bbcode-tabs",
  "description": "Add tabs to your posts by using BBCode tags",
  "keywords": [
    "flarum"
  ],
  "type": "flarum-extension",
  "license": "MIT",
  "require": {
    "flarum/core": "^0.1.0-beta.8"
  },
  "authors": [
    {
      "name": "David Sevilla Martin",
      "email": "me@datitisev.me",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "FoF\\BBCodeTabs\\": "src/"
    }
  },
  "extra": {
    "flarum-extension": {
      "title": "FoF BBCode Tabs",
      "icon": {
        "name": "fas fa-border-none",
        "backgroundColor": "#e74c3c",
        "color": "#fff"
      }
    },
    "flagrow": {
      "discuss": "https://discuss.flarum.org/d/21033-friendsofflarum-bbcode-tabs"
    }
  }
}
